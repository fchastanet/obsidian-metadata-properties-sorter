{
  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/*.code-search": true,
    "main.js": true,
  },
  "explorer.autoReveal": false,
  "files.exclude": {
    "**/.git": true,
    "node_modules": true
  },
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.indentSize": "tabSize",
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "workbench.editorAssociations": {
    "*.md": "default"
  },
  "markdown.extension.toc.omittedFromToc": {
    "*.md": [
      "# %%"
    ]
  },
  "terminal.integrated.defaultProfile.linux": "bash",
  "jest.shell": "/bin/bash",
  "markdown.extension.toc.levels": "2..6",
  "typescript.updateImportsOnPaste.enabled": false,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.advanced": {
    "instructionFiles": [
      ".github/instructions/general.instructions.md",
      ".github/instructions/github-workflow.instructions.md"
    ]
  },
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "file": ".github/instructions/commit-message.instructions.md"
    }
  ],
  "github.copilot.chat.summarizeAgentConversationHistory.enabled": false,
  "github.copilot.chat.agent.runTasks": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": true,
    "git-commit": true,
    "inlineSuggest": true,
    "autoCompletions": true,
    "chat": true,
    "chatCompletions": true,
    "chatCodeGeneration": true,
    "chatCommitMessageGeneration": true,
    "chatFileGeneration": true,
    "chatFileEdit": true,
    "chatFileEditWithContext": true,
    "chatFileEditWithContextAndDiff": true,
    "chatFileEditWithContextAndDiffAndHistory": true,
    "chatFileEditWithContextAndDiffAndHistoryAndSuggestions": true,
    "chatFileEditWithContextAndDiffAndHistoryAndSuggestionsAndCodeReview": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "chat.tools.autoApprove": true,
  "github.copilot.chat.tools.terminal.autoApprove": {
    "/^npm test .*$/": true,
    "/^npm run test .*$/": true
  },
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": false,
  "chat.commandCenter.enabled": true
}
